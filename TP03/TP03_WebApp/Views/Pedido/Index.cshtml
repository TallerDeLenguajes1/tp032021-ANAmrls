@{
    ViewData["Title"] = "Home Page";
}
@model List<TP03_WebApp.Entidades.Pedido>

<div class="text-center">
    <h1 class="display-3 mb-3 text-primary">Listado de Pedidos</h1>
    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Nro</th>
                <th scope="col">Cliente</th>
                <th scope="col">Dirección</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Nro</th>
                    <td>@item.Cliente.Nombre @item.Cliente.Apellido</td>
                    <td>@item.Cliente.Direccion</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="btn">
        <a class="btn btn-primary" asp-area="" asp-controller="Pedido" asp-action="RealizarPedido">Nuevo Pedido</a>
    </div>
</div>