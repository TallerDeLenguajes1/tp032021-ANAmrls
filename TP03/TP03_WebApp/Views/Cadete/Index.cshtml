@{
    ViewData["Title"] = "Home Page";
}
@model List<TP03_WebApp.Entidades.Cadete>

<div class="text-center">
    <h1 class="display-3 mb-3">Cadetes</h1>
    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Teléfono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Telefono</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="btn">
        <a class="btn btn-primary" asp-area="" asp-controller="Cadete" asp-action="AltaCadetes">Nuevo Cadete</a>
    </div>
</div>
